<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/square_msg"
            style="@style/text_333333_16sp"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:text="入选【临沂市火锅人气榜】第九名"
            android:maxLines="1"
            android:ellipsize="end"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/buyed_num"
                android:padding="5dp"
                android:textColor="#999999"
                android:text="火锅帮"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hg1"/>
        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hg2"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/hg3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:id="@+id/headpic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/hp1"
            />
        <TextView
            android:id="@+id/audit_man"
            android:layout_width="100dp"
            android:lines="1"
            android:layout_height="wrap_content"
            style="@style/text_6666666_12sp"
            android:text="诺亚方舟旋转火锅"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <TextView
                android:id="@+id/square_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家"
                android:padding="2dp"
                android:textColor="@color/white"
                android:background="@drawable/rect_blue"/>
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@mipmap/admires"/>
        <TextView
            android:id="@+id/admires"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="33"
            android:layout_marginLeft="5dp"
            style="@style/text_6666666_12sp"
            android:gravity="center_vertical"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/comments"/>
        <TextView
            android:id="@+id/comments"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            style="@style/text_6666666_12sp"
            android:gravity="center_vertical"
            android:text="60"/>

    </LinearLayout>


</LinearLayout>
