<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_alignParentBottom="true"
    >

    <RadioGroup
        android:id="@+id/main_bottomTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="3dp"
        >
        <RadioButton
            android:id="@+id/first_page"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_first_page"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/main_tab_textcoler_selector"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/find"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/selector_find_page"
            android:gravity="center"
            android:text="发现"
            android:textColor="@drawable/main_tab_textcoler_selector"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/contract"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/selector_contract_page"
            android:gravity="center"
            android:text="圈子"
            android:textColor="@drawable/main_tab_textcoler_selector"
            android:textSize="12sp"/>

        <RadioButton
            android:id="@+id/myInfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/selector_myinfo_page"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/main_tab_textcoler_selector"
            android:textSize="12sp"/>
    </RadioGroup>

</RelativeLayout>