<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:background="#ffffff">

    <LinearLayout
        android:id="@+id/chongzhi_ly"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_bg_chongzhi"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chongzhi_goods_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="bottom|center"
            android:textColor= "@drawable/font_selector_chongzhi"
            android:text="￥30"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/chongzhi_goods_jg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="top|center"
            android:text="售价：29.00"
            android:textColor= "@drawable/font_selector_chongzhi2"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
